<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1_cep.MainPage">

    <StackLayout Padding="20" Spacing="10">
        <Label Text="Consulte o seu CEP"
               HorizontalOptions="CenterAndExpand"
               FontSize="25"/>
        
        <Image Source="point.png"
               WidthRequest="200"
               x:Name="logo"
               />
        
        <Entry Placeholder="Digite o seu CEP. Apenas números"
               x:Name="cep"/>
        
        <Button Text="Consultar CEP"
                TextColor="#FFFFFF"
                BackgroundColor="#00146B"
                x:Name="buttonSearch"
                />

        
        <Label FontSize="18"
               VerticalOptions="Center"
               HorizontalOptions="CenterAndExpand"
               HorizontalTextAlignment="Center"
               x:Name="result"/>
    </StackLayout>

</ContentPage>
